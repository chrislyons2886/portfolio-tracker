<div class="row">
  
  <div class="col-md-6">
    <div class="d-flex justify-content-center h-100 pt-4">
      <div class="card shadow">
        <div class="card-header bg-secondary text-light">
          <h3>Log In</h3>
        </div>
        <div class="card-body">
          <form class='login-form'>
            <div class="form-group mx-sm-3 mb-2">
              <label for="email-login" class="sr-only">email</label>
              <input type="Email" class="form-control" id="email-login" placeholder="Email">
            </div>
            <div class="form-group mx-sm-3 mb-2">
              <label for="password-login" class="sr-only">Password</label>
              <input type="password" class="form-control" id="password-login" placeholder="Password">
            </div>
            <div class="form-group pl-1 pt-1">
              <input type="submit" value="Log in" class="btn btn-primary">
            </div>
          </form>
        </div>
        <div class="card-footer bg-secondary">
        </div>
      </div>
    </div>
  </div>  
  <div class="col-md-6">
    <div class="d-flex justify-content-center h-100 pt-4">
      <div class="card shadow">
        <div class="card-header bg-secondary text-light">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <form class='signup-form'>
            <div class="form-group mx-sm-3 mb-2">
              <label for="name-signup" class="sr-only">Name</label>
              <input type="Name" class="form-control" id="name-signup" placeholder="Name">
            </div>
            <div class="form-group mx-sm-3 mb-2">
              <label for="email-signup" class="sr-only">Email</label>
              <input type="Email" class="form-control" id="email-signup" placeholder="Email">
            </div>
            <div class="form-group mx-sm-3 mb-2">
              <label for="password-signup" class="sr-only">Password</label>
              <input type="password" class="form-control" id="password-signup" placeholder="Password">
            </div>
          </form>
        </div>
        <div class="card-footer bg-secondary">
        </div>
      </div>
    </div>
  </div>
<script src="./js/login.js"></script>